  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test, :development do
  gem 'factory_girl', '2.2.0'
  gem 'factory_girl_rails'
  gem 'guard-rspec'
  gem 'guard-spork'
end

group :test do
  gem 'rspec-rails'
  gem 'fuubar'
  gem 'spork', '>= 0.9.1'
